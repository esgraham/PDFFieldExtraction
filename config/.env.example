# Azure Storage Configuration
# Copy this file to .env and fill in your actual values

# Required: Your Azure Storage Account Name
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account_name

# Required: Your Azure Storage Container Name
AZURE_STORAGE_CONTAINER_NAME=pdfs

# Option 1: Use Connection String (recommended for development)
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your_account;AccountKey=your_key;EndpointSuffix=core.windows.net

# Option 2: Use Managed Identity (recommended for production)
# Set USE_MANAGED_IDENTITY=true and ensure your application has appropriate permissions
USE_MANAGED_IDENTITY=false

# Polling interval in seconds (how often to check for new files)
POLLING_INTERVAL=30

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO